	<!-- portal Skin for acme portal -->
	
    <portal-skin>
		<skin-name>Default</skin-name>
		<skin-module>Acme</skin-module>
		<css-path>/skin/css/Style.css</css-path>
		<css-priority>6</css-priority>
        <overwrite>true</overwrite>
	</portal-skin>

    <portal>
        <name>acme</name>
        <module>
            <depends>
                <module>jquery</module>
                <as>$</as>
            </depends>
            <depends>
                <module>wcm-navigation</module>
            </depends>
            <depends>
                <module>wcm-search</module>
            </depends>
            <depends>
                <module>wcm-breadcrumb</module>
            </depends>
            <depends>
                <module>jcarousellite</module>
            </depends>
        </module>
    </portal>

    <module>
        <name>jcarousellite</name>
        <script>
            <path>/javascript/jcarousellite.js</path>
        </script>
        <depends>
            <module>jquery</module>
            <as>jQuery</as>
        </depends>
     </module>
    
    <module>
        <name>jqueryui</name>
        <script>
            <path>/javascript/jquery-ui-1.8.6.custom.min.js</path>
        </script>
        <depends>
            <module>jquery</module>
            <as>jQuery</as>
        </depends>
    </module>    

